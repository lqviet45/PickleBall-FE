{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@org/dashboard": ["libs/dashboard/src/index.ts"],
      "@org/header": ["libs/header/src/index.ts"],
      "@org/home": ["libs/home/src/index.ts"],
      "@org/home-page": ["libs/guest/home-page/src/index.ts"],
      "@org/owner": ["libs/owner/src/index.ts"],
      "@org/sidenav": ["libs/sidenav/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
